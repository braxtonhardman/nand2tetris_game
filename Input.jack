    // Get the powerX as an Int 
    method int getPowerX() { 
        return powerXInt;
    }

    // Get the powerY as an Int 
    method int getPowerY() { 
        return powerYInt; 
    }

    // Dispose of the class when needed 
    method void dispose() { 
        return; 
    }

   

} 