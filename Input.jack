    method String createInvalidInput() { 
        var String errorMsg;

        let errorMsg = String.new(25);       // "Error: Invalid input" is 20 characters

        do errorMsg.appendChar(69);          // 'E'
        do errorMsg.appendChar(114);         // 'r'
